# Docker Environment Configuration
# This file contains Docker-specific environment variables

# Node.js Environment
NODE_ENV=production

# Vite Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Django Configuration
DEBUG=0
SECRET_KEY=docker-production-secret-key-change-in-production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,api,frontend

# Database Configuration (Docker)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=trojan_defender
DB_USER=postgres
DB_PASSWORD=secure_postgres_password_123
DB_HOST=db
DB_PORT=5432

# Database Connection Pooling
DB_CONN_MAX_AGE=600
DB_CONN_HEALTH_CHECKS=True
DB_OPTIONS_sslmode=prefer
DB_OPTIONS_statement_timeout=30000

# JWT Settings
JWT_SECRET_KEY=docker-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS512
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=7

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:80,http://127.0.0.1:80
CORS_ALLOW_CREDENTIALS=True

# Redis Configuration (Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Celery Configuration (Docker)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# MinIO Configuration (Docker)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=object_storage:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=trojan-defender-uploads

# Scanner Configuration (Docker)
SCANNER_HOST=scanner
SCANNER_PORT=3310
MAX_UPLOAD_SIZE=104857600
MAX_ARCHIVE_DEPTH=5

# Email Settings (Docker - configure for production)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=1
DEFAULT_FROM_EMAIL=your-email@example.com

# External API Keys (configure for production)
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here
SHODAN_API_KEY=your-shodan-api-key-here
ABUSEIPDB_API_KEY=your-abuseipdb-api-key-here

# Security Settings (Docker Production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7