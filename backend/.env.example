# Development Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit real credentials to version control

# Django Configuration
SECRET_KEY=your-secret-key-here-generate-new-one
DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration - PostgreSQL (Production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=trojan_defender_db
DB_USER=trojan_defender_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Database Connection Pooling
DB_CONN_MAX_AGE=600
DB_CONN_HEALTH_CHECKS=True
DB_OPTIONS_sslmode=prefer
DB_OPTIONS_statement_timeout=30000

# JWT settings
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-new-one
JWT_ALGORITHM=HS512
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=7

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# Email settings (placeholder - use real credentials)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=1
DEFAULT_FROM_EMAIL=your-email@example.com

# External API Keys (placeholder - use real keys)
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here
SHODAN_API_KEY=your-shodan-api-key-here
ABUSEIPDB_API_KEY=your-abuseipdb-api-key-here

# MinIO Configuration (development defaults)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123

# Redis Configuration (development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Settings (development - less strict)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# File Upload Settings
MAX_UPLOAD_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,txt,doc,docx,zip,tar,gz

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# OpenAI Configuration (placeholder)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Scanner Configuration
SCANNER_PORT=8001
MAX_UPLOAD_SIZE=104857600
MAX_ARCHIVE_DEPTH=5

# MinIO Bucket
MINIO_BUCKET_NAME=trojan-defender-uploads